<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="codefactory.centralwayfinderproject.activites.ServiceActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@mipmap/top_orange_banner"
        android:id="@+id/topBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/title_activity_service"
            android:id="@+id/textView6"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/service_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_above="@+id/tool_bar"
        android:layout_below="@+id/topBar"
        android:focusableInTouchMode="true" />

    <!-- This is where we add our custom toolbar to the pages-->
    <codefactory.centralwayfinderproject.helpers.MyCustomToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2">
    </codefactory.centralwayfinderproject.helpers.MyCustomToolbar>

</RelativeLayout>
