<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="codefactory.centralwayfinderproject.activites.SettingsActivity">


    <TextView
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Accessibility"
        android:id="@+id/txt_Accessibility"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="137dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Campus"
        android:id="@+id/txt_Campus"
        android:layout_below="@+id/txt_Accessibility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="handleOnClick"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About"
        android:id="@+id/txt_About"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="handleOnClick"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Terms of Service"
        android:id="@+id/txt_Terms"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_below="@+id/txt_Policy"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:onClick="handleOnClick"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Privacy Policy"
        android:id="@+id/txt_Policy"
        android:textSize="25dp"
        android:layout_below="@+id/txt_About"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="handleOnClick"/>

    <Switch
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/Switch_Accessibility"
        android:layout_alignTop="@+id/txt_Accessibility"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
