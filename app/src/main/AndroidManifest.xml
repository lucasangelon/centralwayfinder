<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codefactory.centralwayfinderproject" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activites.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.CopyrightActivity"
            android:label="@string/title_activity_copyright" >
        </activity>
        <activity
            android:name=".activites.GoogleMapActivity"
            android:label="@string/title_activity_google_map" >
        </activity>
        <activity
            android:name=".activites.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".activites.SelectCampusActivity"
            android:label="@string/title_activity_select_campus" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activites.BuildingViewActivity"
            android:label="@string/title_activity_buildingview" >
        </activity>
        <activity
            android:name=".activites.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activites.IndoorMapsActivity"
            android:label="@string/title_activity_indoor_maps" >
        </activity>
        <activity
            android:name=".activites.ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name=".activites.TermsActivity"
            android:label="@string/title_activity_terms" >
        </activity>
        <activity
            android:name=".activites.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
